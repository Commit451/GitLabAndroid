<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--  Dark mode overrides  -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/main_blue</item>
        <item name="colorAccent">@color/yellow</item>
        <item name="colorSecondary">@color/yellow</item>
        <item name="colorPrimaryDark">@color/main_blue_darker</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowBackground">@color/window_background</item>
        <!-- color of the menu overflow icon -->
        <item name="actionOverflowButtonStyle">@style/OverflowStyle</item>
    </style>

    <style name="OverflowStyle" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="TextInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:theme">@style/TextInputLayoutTheme</item>
    </style>

    <style name="TextInputLayoutTheme">
        <item name="colorPrimary">@color/yellow</item>
    </style>

</resources>
